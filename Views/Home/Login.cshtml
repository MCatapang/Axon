@model EmployeeLogin

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/script/script.js"></script>
    <title>Axon</title>
</head>

<body>
    <partial name="_NavBar">
    <div class="contentContainer formContainer">
        <form asp-action="LoggingIn" asp-controller="Home">
            <div class="formHeader">
                <h1>Access your account</h1>
                <img src="/images/Login.png" alt="Login Icon">
            </div>
            <hr>
            <div class="formInputsAreaSolo">
                    <label asp-for="EmailLogin"></label>
                    <input asp-for="EmailLogin">
                    <span asp-validation-for="EmailLogin"></span>

                    <label asp-for="PasswordLogin"></label>
                    <input asp-for="PasswordLogin">
                    <span asp-validation-for="PasswordLogin"></span>

                    <button type="submit">Access</button>
            </div>
        </form>
    </div>
    <partial name="_Footer">
</body>

</html>