<div id="userPatients">
    <div class="sectionHeader">
        <h1 class="textShadow">Assigned Patients</h1>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Chief Complaint</th>
                <th>Quick Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Patient p in ViewBag.AllPatients)
            {
                <tr>
                    <td>
                        <a asp-action="OnePatient" asp-controller="DashDiv" asp-route-ptID="@p.PatientID">
                            @p.LastName, @p.FirstName
                        </a>
                    </td>
                    <td>@p.Complaint</td>
                    <td>
                        <a asp-action="AddChart" asp-controller="DashDiv" asp-route-ptID="@p.PatientID">
                            Chart
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>